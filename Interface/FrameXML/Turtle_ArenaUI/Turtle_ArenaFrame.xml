<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Frame name="ArenaFrame" parent="CharacterFrame" setAllPoints="true" enableMouse="true" hidden="true" id="5">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\PaperDollInfoFrame\UI-Character-General-TopLeft">
					<Size>
						<AbsDimension x="256" y="256" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="2" y="-1" />
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<Texture file="Interface\PaperDollInfoFrame\UI-Character-General-TopRight">
					<Size>
						<AbsDimension x="128" y="256" />
					</Size>
					<Anchors>
						<Anchor point="TOPRIGHT">
							<Offset>
								<AbsDimension x="2" y="-1" />
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<Texture file="Interface\PaperDollInfoFrame\UI-Character-General-BottomLeft">
					<Size>
						<AbsDimension x="256" y="256" />
					</Size>
					<Anchors>
						<Anchor point="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="2" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<Texture file="Interface\PaperDollInfoFrame\UI-Character-General-BottomRight">
					<Size>
						<AbsDimension x="128" y="256" />
					</Size>
					<Anchors>
						<Anchor point="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="2" y="-1" />
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentArenaPoints" inherits="GameFontNormal" text="ARENA_ARENA_POINTS">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="134" y="-84" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="ARTWORK">
                <Texture file="Interface\BattlefieldFrame\UI-Battlefield-Bar">
                    <Size>
                        <AbsDimension x="513" y="40" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="LEFT">
                            <Offset>
                                <AbsDimension x="16" y="152" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
		</Layers>
		<Frames>
			<Button name="$parentTab1" inherits="TabButtonTemplate" text="HONOR" id="7">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="71" y="-40" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						PanelTemplates_DeselectTab(this)
						PanelTemplates_TabResize(10)
						_G[this:GetName().."HighlightTexture"]:SetWidth(this:GetTextWidth() + 36)
					</OnLoad>
					<OnClick>
						ArenaFrame:Hide()
						HonorFrame:Show()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentTab2" inherits="TabButtonTemplate" text="ARENA" id="8">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTab1" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="2" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						PanelTemplates_SelectTab(this)
						PanelTemplates_TabResize(10)
						getglobal(this:GetName().."HighlightTexture"):SetWidth(this:GetTextWidth() + 36)
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentTeam1" inherits="ArenaTeamTemplate" id="1">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-128" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName() .. "Text"):SetText("(2v2)")
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentTeam2" inherits="ArenaTeamTemplate" id="2">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTeam1" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-4" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName() .. "Text"):SetText("(3v3)")
					</OnLoad>
				</Scripts>
			</Button>
			<Button name="$parentTeam3" inherits="ArenaTeamTemplate" id="3">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTeam2" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-4" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName() .. "Text"):SetText("(5v5)")
					</OnLoad>
				</Scripts>
			</Button>
			<Frame name="$parentDetailsFrame" hidden="true">
				<Size>
					<AbsDimension x="200" y="192" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-34" y="-28" />
						</Offset>
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border">
					<BackgroundInsets>
						<AbsInset left="11" right="12" top="12" bottom="11" />
					</BackgroundInsets>
					<EdgeSize>
						<AbsValue val="32" />
					</EdgeSize>
				</Backdrop>
				<Layers>
					<Layer level="BACKGROUND">
						<FontString name="$parentTitle" inherits="GameFontNormal" text="ARENA_TEAM_ROSTER">
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="16" y="-18" />
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
						<FontString name="$parentMemberName" inherits="GameFontDisable" justifyH="LEFT" text="NAME">
							<Anchors>
								<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension x="0" y="-8" />
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
						<Anchors>
							<Anchor point="TOPRIGHT">
								<Offset>
									<AbsDimension x="-3" y="-3" />
								</Offset>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parentButton" inherits="UIPanelButtonTemplate2">
						<Size>
							<AbsDimension x="110" y="22" />
						</Size>
						<Anchors>
							<Anchor point="BOTTOMRIGHT">
								<Offset>
									<AbsDimension x="-14" y="14" />
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnClick>
								if this:GetID() == 1 then
									StaticPopup_Show("ARENA_POPUP_INVITE_PLAYER")
								else
									StaticPopup_Show("ARENA_POPUP_LEAVE_CONFIRM")
								end
							</OnClick>
						</Scripts>
					</Button>
					<Frame name="$parentMember1" inherits="ArenaMemberFrameTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset>
									<AbsDimension x="0" y="-54" />
								</Offset>
							</Anchor>
						</Anchors>
					</Frame>
					<Frame name="$parentMember2" inherits="ArenaMemberFrameTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentMember1" relativePoint="BOTTOMLEFT">
								<Offset>
									<AbsDimension x="0" y="4" />
								</Offset>
							</Anchor>
						</Anchors>
					</Frame>
					<Frame name="$parentMember3" inherits="ArenaMemberFrameTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentMember2" relativePoint="BOTTOMLEFT">
								<Offset>
									<AbsDimension x="0" y="4" />
								</Offset>
							</Anchor>
						</Anchors>
					</Frame>
					<Frame name="$parentMember4" inherits="ArenaMemberFrameTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentMember3" relativePoint="BOTTOMLEFT">
								<Offset>
									<AbsDimension x="0" y="4" />
								</Offset>
							</Anchor>
						</Anchors>
					</Frame>
					<Frame name="$parentMember5" inherits="ArenaMemberFrameTemplate" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="$parentMember4" relativePoint="BOTTOMLEFT">
								<Offset>
									<AbsDimension x="0" y="4" />
								</Offset>
							</Anchor>
						</Anchors>
					</Frame>
				</Frames>
				<Scripts>
					<OnHide>
						ArenaFrame.currentTeam = nil
					</OnHide>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				ArenaFrame_OnLoad()
			</OnLoad>
			<OnShow>
				ArenaFrame_OnShow()
			</OnShow>
			<OnHide>
				PlaySound("igCharacterInfoClose")

				this.currentTeam = nil

				ArenaFrameDetailsFrame:Hide()
			</OnHide>
		</Scripts>
	</Frame>
</Ui>